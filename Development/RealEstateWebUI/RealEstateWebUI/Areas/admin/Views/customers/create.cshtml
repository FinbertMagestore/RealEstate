@model RealEstateWebUI.Areas.admin.Models.Customer
@using RealEstateWebUI.Areas.admin.Models;

@{
    ViewBag.Title = Common.StoreName + " | Thêm mới khách hàng";
    Layout = "~/Areas/admin/Views/Shared/_MasterPage.cshtml";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "customerForm" }))
{
    <div class="page-heading page-heading-md">
@Html.AntiForgeryToken()
        <span>
            <i class="fa fa-users fa-2x"></i>
        </span>
        <a href="/admin/customers/"><span class="title">Khách hàng</span></a> <span class="title"> / Thêm mới khách hàng</span>
        <div class="pull-right">
            <input type="submit" id="btnSave" class="btn btn-primary" value="Thêm mới" />
        </div>
    </div>
    <div class="container-fluid-md">
        <div class="row">
            <div class="col-sm-3">
                <h4>Thông tin khách hàng</h4>
                <p class="text-muted">
                    Các thông tin cơ bản về khách hàng.
                </p>
            </div>
            <div class="col-sm-9">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div>
                                    @Html.LabelFor(model => model.CustomerFirstName, new { @class = "control-label strong" })
                                </div>
                                <div class="">
                                    @Html.TextBoxFor(model => model.CustomerFirstName, new { @class = "form-control", @placeholder = "Nhập họ" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div>
                                    @Html.LabelFor(model => model.CustomerLastName, new { @class = "control-label strong" })
                                </div>
                                <div class="">
                                    @Html.TextBoxFor(model => model.CustomerLastName, new { @class = "form-control", @placeholder = "Nhập tên" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="" style="margin-top: 10px">
                                    @Html.LabelFor(model => model.CustomerEmail, new { @class = "control-label strong" })
                                </div>
                                <div class="">
                                    @Html.TextBoxFor(model => model.CustomerEmail, new { @class = "form-control", @placeholder = "Nhập email" })
                                    @Html.ValidationMessageFor(model => model.CustomerEmail)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12" style="margin-top: 10px">
                                <div class="">
                                    @Html.EditorFor(model => model.AcceptsMarketing)
                                    @Html.LabelFor(model => model.AcceptsMarketing, new { @class = "control-label" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <h4>Địa chỉ</h4>
                <p class="text-muted">Địa chỉ chính của khách hàng.</p>
            </div>
            <div class="col-sm-9">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="" style="margin-top: 10px">
                                        @Html.LabelFor(model => model.AddressBook.AddressBookFirstName, new { @class = "control-label strong" })
                                    </div>
                                    <div class="">
                                        @Html.TextBoxFor(model => model.AddressBook.AddressBookFirstName, new { @class = "form-control", @placeholder = "Nhập họ" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="" style="margin-top: 10px">
                                        @Html.LabelFor(model => model.AddressBook.AddressBookLastName, new { @class = "control-label strong" })
                                    </div>
                                    <div class="">
                                        @Html.TextBoxFor(model => model.AddressBook.AddressBookLastName, new { @class = "form-control", @placeholder = "Nhập tên" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="" style="margin-top: 10px">
                                        @Html.LabelFor(model => model.AddressBook.CompanyName, new { @class = "control-label strong" })
                                    </div>
                                    <div class="">
                                        @Html.TextBoxFor(model => model.AddressBook.CompanyName, new { @class = "form-control", @placeholder = "Nhập công ty" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="" style="margin-top: 10px">
                                        @Html.LabelFor(model => model.AddressBook.Phone, new { @class = "control-label strong" })
                                    </div>
                                    <div class="">
                                        @Html.TextBoxFor(model => model.AddressBook.Phone, new { @class = "form-control", @placeholder = "Nhập số điện thoại" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="" style="margin-top: 10px">
                                        @Html.LabelFor(model => model.AddressBook.HomeAddress, new { @class = "control-label strong" })
                                    </div>
                                    <div class="">
                                        @Html.TextBoxFor(model => model.AddressBook.HomeAddress, new { @class = "form-control", @placeholder = "Nhập địa chỉ" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="" style="margin-top: 10px">
                                        @Html.LabelFor(model => model.AddressBook.ProvinceName, new { @class = "control-label strong" })
                                    </div>
                                    <div class="">
                                        @Html.TextBoxFor(model => model.AddressBook.ProvinceName, new { @class = "form-control", @placeholder = "Nhập tỉnh / thành phố" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="" style="margin-top: 10px">
                                        @Html.LabelFor(model => model.AddressBook.Postal, new { @class = "control-label strong" })
                                    </div>
                                    <div class="">
                                        @Html.TextBoxFor(model => model.AddressBook.Postal, new { @class = "form-control", @placeholder = "Nhập Postal / Zip Code" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="" style="margin-top: 10px">
                                        @Html.LabelFor(model => model.AddressBook.CountryID, new { @class = "control-label strong" })
                                    </div>
                                    <div class="">
                                        @Html.DropDownListFor(model => model.AddressBook.CountryID, new SelectList(Model.AddressBook.Countries, "CountryID", "CountryName"), new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <h4>Ghi chú</h4>
                <p class="text-muted">Ghi chú thêm về khách hàng.</p>
            </div>
            <div class="col-sm-9">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.TextAreaFor(model => model.CustomerNote, new { @class = "form-control", @placeholder = "Nhập ghi chú về khách hàng" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3">
                <h4>Tags</h4>
                <p class="text-muted">Tag có thể được dùng để phân loại khách hàng.</p>
            </div>
            <div class="col-sm-9">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    @Html.LabelFor(m => m.Tags, new { @class = "control-label" })
                                    <input class="taginput" name="Tags" type="text" data-role="tagsinput" value="@Model.Tags" style="display: none;">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label>Bạn có thể chọn những tag đã được sử dụng</label>
                                    @if (Model.ListTag != null && Model.ListTag.Count > 0)
                                    {
                                        <div class="col-button-colors">
                                            @foreach (var item in Model.ListTag)
                                            {
                                                <a class="btn btn-info" onclick="addTag(this)">@item.TagName</a>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/assets/js/admin/customer.js"></script>