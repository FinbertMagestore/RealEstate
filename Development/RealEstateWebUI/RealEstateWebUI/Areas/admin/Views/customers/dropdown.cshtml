@model RealEstateWebUI.Areas.admin.Models.CustomerDropdownModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "customerDropdown" }))
{
    @Html.HiddenFor(m => m.OrderID)
    <div id="listCustomer" class="">
        @for (int i = 0; i < Model.CustomerDropdowns.Count; i++)
        {
            <ul class="list-unstyled">
                <li class="form-inline">
                    @*<div class="col-sm-1">
                            @Html.CheckBoxFor(m => Model.CustomerDropdowns[i].Choice)
                        </div>*@
                    <a href="javascript:void(0)" onclick="selectCustomer(@Model.CustomerDropdowns[i].CustomerID)">
                        <div class="col-sm-2">
                            <img class="gravatar--size-30 gravatar" src="~/assets/images/customper-noavatar.png" alt="null null">
                        </div>
                        <div class="col-sm-10">
                            @if (!string.IsNullOrEmpty(Model.CustomerDropdowns[i].CustomerName))
                            {
                                <p>@Html.DisplayFor(m => Model.CustomerDropdowns[i].CustomerName)</p>
                            }
                            <p class="subdued">@Html.DisplayFor(m => Model.CustomerDropdowns[i].CustomerEmail)</p>
                        </div>
                        @Html.HiddenFor(m => Model.CustomerDropdowns[i].CustomerID)
                    </a>
                </li>
            </ul>
        }
    </div>
    <div class="text-muted">
        Hiện thị @Model.CustomerDropdowns.Count kết quả
    </div>
}